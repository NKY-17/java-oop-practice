G)
import java.util.Scanner;
public class task1{
  public static void main(String[]args){
    Scanner sc=new Scanner(System.in);
    int x=sc.nextInt();
     System.out.println(x);
  }
}

import java.util.Scanner;
public class task1{
  public static void main(String[]args){
    Scanner sc=new Scanner(System.in);
    int x=sc.nextInt();
 int y=sc.nextInt();
    System.out.println(x+y);
  }
}
